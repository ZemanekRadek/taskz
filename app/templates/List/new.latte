{block topMenu}{/block}

{block content}
<div class="dialog-header">
	<div class="heading">
  	<h1 id="hero-title" class="center no-bottom"><strong>Create <span class="thin">new</span> task list</strong></h1>
		<h2 class="center no-bottom"><span class="thin">Too many tasks? Let's manage them!</span></h2>
    </div>
</div>

{*control newList *}


	<div class="form-tasklist">
		<div class="container-fluid">
			<div class="row">
				<div class="col s8 offset-s2">
					<div class="col s12">
						<div class="card-panel">

{form newList}
								<div class="errors" n:if="$form->hasErrors()">
									<p class="text-center"><i class="ico-validation icon-evil"></i></p>
										<h3>Something wrong? Sometimes it's just happened</h3>
											<p class="errors-list"> <!-- tohle musi prijit pod inputy s chybami! -->
												<ul>
													<li n:foreach="$form->errors as $error">{$error}</li>
												</ul>
											</p> <!-- tohle musi prijit pod inputy s chybami! -->
										</div>

							<div class="form-group">
								<div class="row">
									<div class="input-field col s12">
										<input id="list_name" type="text" n:name=tl_name class="form-control validate">
										<label for="frm-registrationForm-us_name" data-error="Did you fill task list name?" data-success="Great! Continue to next step">Task list name <span class="label-required">*</span></label>
									</div>

									<div class="form-group">
										<div class="row">
											<div class="input-field col s12">
												<label class="static-label outofinput">Task List Icon</label>
													<div class="btn-group" role="group" aria-label="...">
  <button type="button" class="btn btn-default">Left</button>
  <button type="button" class="btn btn-default">Middle</button>
  <button type="button" class="btn btn-default">Right</button>
</div>

													{foreach $form[tl_ico]->items as $key => $value}
												<input class="with-gap" name="group3" type="radio" id="test5" n:name="tl_ico:$key" />
<label for="test5" n:name="tl_ico:$key">{$value}</label>
								{/foreach}
											</div>
										</div>
									</div>

